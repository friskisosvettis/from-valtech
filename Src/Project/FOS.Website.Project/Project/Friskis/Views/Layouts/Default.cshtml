@using Sitecore.Links
@using Sitecore.Mvc
@using Valtech.Foundation
@* @using Sitecore.Mvc.Analytics.Extensions *@
@{
    Layout = null;
    string extraBodyClasses = "";
    if (Sitecore.Context.PageMode.IsExperienceEditorEditing)
    {
        extraBodyClasses = "editMode";
    }

}
<!DOCTYPE html>
