
@using FOS.Website.Feature.Content.Models
@using Synthesis.Mvc.Extensions
@using Synthesis.Mvc.Helpers
@model MoodFooterModel

@if (Model.MoodFooterItem == null)
{
    return;
}

<div class="footer--mood">
    @if (Model.MoodFooterItem.MoodMovie.HasValue)
    {
        <video autoplay loop="loop" preload="none">
            <source src="@Model.MoodFooterItem.MoodMovie.Url" type="video/webm">
            <source src="@Model.MoodFooterItem.MoodMovie.Url" type="video/mp4"/>
            <source src="@Model.MoodFooterItem.MoodMovie.Url" type="video/ogg">
            @Model.MoodFooterItem.BackgroundImage.Render()
        </video>
    }
    else
    {
        @Model.MoodFooterItem.BackgroundImage.Render()
    }
    <div class="footer__overlay">
        <div class="footer__content">
            <h2>@Model.MoodFooterItem.Title.Render()</h2>
            <p class="intro">@Model.MoodFooterItem.Description.Render()</p>
            @Model.MoodFooterItem.Link.Render(null, "btn btn__link btn--secondary")
        </div>
    </div>
</div>
