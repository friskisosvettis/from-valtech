<head>
    @Html.Sitecore().Placeholder("headermetaplaceholder")
    <meta charset="ISO-8859-1"/>
    <meta name="author" content="Valtech - www.valtech.com"/>
    <meta name="description" content=""/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=yes"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    <title>TODO: Title</title>
    @* @Html.Sitecore().VisitorIdentification() *@

    <link rel="stylesheet" href="@Valtech.Foundation.Assets.Fingerprint.Add("/assets/styles/style.css")" media="all" />
    
    @{
        var originalItem = new OriginalItem(Sitecore.Context.Item);
        if(originalItem.OriginalItemLink != null && 
            originalItem.OriginalItemLink.HasValue && 
            originalItem.OriginalItemLink.Target != null && 
            !originalItem.OriginalItemLink.Target.Id.Equals(Sitecore.Context.Item.ID))
        {
            <link rel="canonical" href="@LinkManager.GetItemUrl(originalItem.OriginalItemLink.Target.InnerItem)" />
        }
    }

</head>
<body class="@extraBodyClasses">

    @Html.Sitecore().Placeholder("main")

    <script src="@Valtech.Foundation.Assets.Fingerprint.Add("/assets/scripts/bundle.js")"></script>
