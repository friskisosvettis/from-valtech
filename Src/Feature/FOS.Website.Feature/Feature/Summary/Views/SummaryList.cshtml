@using FOS.Website.Feature.Content.Models
@using Synthesis.Mvc.Helpers
@using FOS.Website.Feature.Summary
@using FOS.Website.Feature.Summary.Models
@using Sitecore.Links
@using Sitecore.Resources.Media
@using Sitecore.Web.UI.WebControls
@using Synthesis.Mvc.Extensions
@model SummaryListModel

@{
    int counter = 0;

    // Different wrapping classes for different colums dependent on the editors choice
    var containerClass = "container--12";
    if (Model.SummaryListItem.ItemsPerRow.RawValue.Equals("2"))
    {
        containerClass = "container--6";
    }
    else if (Model.SummaryListItem.ItemsPerRow.RawValue.Equals("3"))
    {
        containerClass = "container--4";
    }
}

@if (Model.SummaryList.Any())
{
    // Alternative one - COMPACT LIST - if checked this is displayed instead of page specific teaser list
    var cssClass = "teaser--small";
    if (Model.SummaryListItem.ItemsPerRow.RawValue.Equals("1"))
    {
        cssClass = "teaser--full";
    }
    if (Model.SummaryListItem.DisplayAsHighlightedList.Value)
    {
        cssClass = "";
    }
    <div class="container">
        <div class="container--12">
            <h2 class="color--primary margin-bottom--none text-align--center">@Model.SummaryListItem.Header</h2>
        </div>
    </div>
        <ul class="container">
            @foreach (SummarySpotModel summarySpot in Model.SummaryList)
            {
                if (Model.SummaryListItem.DisplayAsCollage.Value)
                {
                    if (counter == 0)
                    {
                        containerClass = "container--6";
                    }
                    else if (counter == 2)
                    {
                        containerClass = "container--4";
                    }
                    else if (counter == 5)
                    {
                        containerClass = "container--12";
                    }
                }
                if (summarySpot.TrainingFormItem != null)
                {
                    cssClass = "";
                }
                <li class="@containerClass">
                    <div class="teaser @cssClass">
                        <a href="@LinkManager.GetItemUrl(summarySpot.SummaryItem.InnerItem, new UrlOptions() {LanguageEmbedding = LanguageEmbedding.Never})">

                            @* Only render this section (with teaser--overlay/teaser__overlay) if highlight or traing form kicker*@
                            @if (Model.SummaryListItem.DisplayAsHighlightedList.Value || (summarySpot.TrainingFormItem != null))
                            {
                                <div class="teaser--overlay">
                                    @if (summarySpot.SummaryItem.SummaryImage.HasValue)
                                    {
                                        if (summarySpot.SummaryItem.SummaryImage.MediaItem != null)
                                        {
                                            @summarySpot.SummaryItem.SummaryImage.Render()
                                        }
                                    }
                                    <div class="teaser__overlay">
                                        <div class="teaser__content">
                                            <h2 class="heading-3">
                                                @if (summarySpot.SummaryItem.SummaryHeading.HasValue)
                                                {
                                                    @summarySpot.SummaryItem.SummaryHeading.Render(false)
                                                }
                                                else
                                                {
                                                    @summarySpot.SummaryItem.Name
                                                }
                                            </h2>
                                            @if (summarySpot.EventItem != null)
                                            {
                                                <p>
                                                <small class="date icon--mini icon__event-light">@summarySpot.EventItem.EventStartDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventStartDate.Value.ToString("t")</small>
                                                    @if (summarySpot.EventItem.EventEndDate.HasValue)
                                                    {
                                                        <small class="date"> - @summarySpot.EventItem.EventEndDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventEndDate.Value.ToString("t")</small>
                                                    }
                                                    @if (containerClass == "container--12")
                                                    {
                                                        <small class="date icon--mini icon__pin-map-light">@summarySpot.EventItem.EventLocation</small>
                                                    }
                                                </p>
                                            }
                                            @if (summarySpot.NewsItem != null)
                                            {
                                                <p>
                                                    <small class="date">@summarySpot.NewsItem.NewsDate.Value.ToString("dd MMMM yyyy")</small>
                                                </p>
                                            }
                                            @if (summarySpot.SummaryItem.SummaryText.HasValue)
                                            {
                                                <p>@summarySpot.SummaryItem.SummaryText.Render(false)</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                @* Render this section if not highlight or traing form kicker*@

                                if (summarySpot.SummaryItem.SummaryImage.HasValue)
                                {
                                    if (summarySpot.SummaryItem.SummaryImage.MediaItem != null)
                                    {
                                        @summarySpot.SummaryItem.SummaryImage.Render()
                                    }
                                }
                                <div class="teaser__content">
                                    <h3 class="heading-5">
                                        @if (summarySpot.SummaryItem.SummaryHeading.HasValue)
                                        {
                                            @summarySpot.SummaryItem.SummaryHeading.Render(false)
                                        }
                                        else
                                        {
                                            @summarySpot.SummaryItem.Name
                                        }
                                    </h3>

                                    @*Article/news/events FULL WIDTH KICKER: Render with text *@
                                    @if (Model.SummaryListItem.ItemsPerRow.RawValue.Equals("1"))
                                    {
                                        if (summarySpot.EventItem != null)
                                        {
                                            <p>
                                                <small class="date--primary icon--mini icon__event">@summarySpot.EventItem.EventStartDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventStartDate.Value.ToString("t")</small>
                                                @if (summarySpot.EventItem.EventEndDate.HasValue)
                                                {
                                                    <small class="date--primary"> - @summarySpot.EventItem.EventEndDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventEndDate.Value.ToString("t")</small>
                                                }
                                            </p>
                                            <p>
                                                <small class="date--primary icon--mini  icon__pin-map">@summarySpot.EventItem.EventLocation</small>
                                            </p>
                                        }
                                        if (summarySpot.NewsItem != null)
                                        {
                                            <p>
                                                <small class="date--primary">@summarySpot.NewsItem.NewsDate.Value.ToString("dd MMMM")</small>
                                            </p>
                                        }
                                        if (summarySpot.SummaryItem.SummaryText.HasValue)
                                        {
                                            <p>@summarySpot.SummaryItem.SummaryText.Render(false)</p>
                                        }
                                        // TODO: Remove hard coded "Läs mer" text and make it translatable
                                        <a class="link--goto" href="@LinkManager.GetItemUrl(summarySpot.SummaryItem.InnerItem, new UrlOptions() {LanguageEmbedding = LanguageEmbedding.Never})">
                                            Läs mer
                                        </a>
                                    }
                                    else
                                    {
                                        if (summarySpot.EventItem != null)
                                        {
                                            <p>
                                                <small class="date icon--mini icon__event">@summarySpot.EventItem.EventStartDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventStartDate.Value.ToString("t")</small>
                                                @if (summarySpot.EventItem.EventEndDate.HasValue)
                                                {
                                                    <small class="date"> - @summarySpot.EventItem.EventEndDate.Value.ToString("dd MMMM"), @summarySpot.EventItem.EventEndDate.Value.ToString("t")</small>
                                                }
                                            </p>
                                        }
                                        if (summarySpot.NewsItem != null)
                                        {
                                            <p>
                                                <small class="date">@summarySpot.NewsItem.NewsDate.Value.ToString("dd MMMM")</small>
                                            </p>
                                        }
                                    }
                                </div>
                            }
                        </a>
                    </div>
                </li>
                if (Model.SummaryListItem.DisplayAsCollage.Value)
                {
                    if (counter == 5)
                    {
                        counter = 0;
                    }
                    else
                    {
                        counter = counter + 1;
                    }
                }
            }
        </ul>
    if (Model.SummaryListItem.ReadMoreLink.HasValue)
    {
        <div class="container">
            <div class="container--12 text-align--right margin-bottom--space">
                @Model.SummaryListItem.ReadMoreLink.Render(null, "link--goto")
            </div>
        </div>
    }
}
